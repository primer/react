{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./lib",
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types", "./@types"],
    "plugins": [{"name": "typescript-plugin-css-modules"}]
  },
  "include": [
    "@types/**/*.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "script/**/*.ts",
    "vitest.config.mts",
    "config/**/*.ts",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx"
  ]
}
