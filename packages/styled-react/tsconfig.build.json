{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@primer/react": ["../react/dist/index.d.ts"],
      "@primer/react/*": ["../react/dist/*"]
    }
  },
  "exclude": [
    "vitest.config.ts",
    "vitest.config.browser.ts",
    "config",
    "**/*.test.ts",
    "**/*.test.tsx",
    "./.storybook/**/*.ts",
    "./.storybook/**/*.tsx"
  ]
}
