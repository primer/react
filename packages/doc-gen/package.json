{
  "name": "@primer/doc-gen",
  "private": true,
  "description": "A documentation generator for the Primer Design System",
  "version": "0.0.1",
  "type": "module",
  "bin": {
    "doc-gen": "./bin/doc-gen.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "bin",
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "rollup -c",
    "type-check": "tsc --noEmit",
    "watch": "rollup -c -w",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.2",
    "@types/signale": "^1.4.7",
    "signale": "^1.4.0",
    "yargs": "^18.0.0",
    "@types/yargs": "^17.0.33"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.46.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.8.3"
  }
}
