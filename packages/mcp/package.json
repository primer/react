{
  "name": "@primer/mcp",
  "private": true,
  "description": "An MCP server that connects AI tools to the Primer Design System",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "mcp": "./bin/mcp.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./transports/stdio": {
      "types": "./dist/transports/stdio.d.ts",
      "default": "./dist/stdio.js"
    }
  },
  "files": [
    "bin",
    "dist",
    "src",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/primer/react.git"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "rolldown -c",
    "type-check": "tsc --noEmit",
    "watch": "rolldown -w -c"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.4",
    "@modelcontextprotocol/sdk": "^1.24.0",
    "@primer/octicons": "^19.15.5",
    "@primer/primitives": "10.x || 11.x",
    "@primer/react": "^38.0.0",
    "cheerio": "^1.0.0",
    "turndown": "^7.2.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@modelcontextprotocol/inspector": "^0.16.6",
    "@rollup/plugin-babel": "^6.1.0",
    "@types/turndown": "^5.0.5",
    "rimraf": "^6.0.1",
    "rolldown": "^1.0.0-beta.53",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.9.2"
  }
}
